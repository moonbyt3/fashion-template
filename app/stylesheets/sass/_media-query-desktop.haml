// Media query for desktop screens
@include desktop {
	header {
		.top-nav {
			display: block;
		}
		nav {
			display: block;
			
		}
		div[class="holder"]{
			display: none;
		}
	}
	.jumboContent {
		h1 {
			margin-top: 0;
			font-size: 4em !important;
			font-weight: 400;
		}
	}
	.more-info {
		article>p, ul>li {
			font-size: 1em;
		}
	}
	.benefits {
		width: 40%;
		display: inline-block;
		position: absolute;
		margin: 0 1em;
		line-height: 1.7;
		p {
			font-size: 90%;
		}
		h4 {
			font-size: 1.2em;
		}
	}
	.slideshow-container img {
		margin-right: 0.2em;
	}
	.login-form {
		form {
			width: 48%;
			display: inline-block;
			border-top: 1px solid black;
		}
	}
	.bottom-separator {
		display: block;
	}
	.newsletter{
		float: right;
		width: 30%;
		margin-right: 3%;
	}
}